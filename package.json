{
  "name": "gemini-code-plugin",
  "displayName": "Gemini Code Plugin",
  "description": "A VS Code extension for AI coding functions using Gemini.",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.80.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "gemini-code-plugin.startChat",
        "title": "Gemini: Start Chat"
      }
    ],
    "configuration": {
      "title": "Gemini Code Plugin Configuration",
      "properties": {
        "gemini-code-plugin.apiKey": {
          "type": "string",
          "description": "Your Google Gemini API Key. Get one from Google AI Studio.",
          "scope": "window"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vitest run --dir src"
  },
  "devDependencies": {
    "@types/vscode": "^1.80.0",
    "@types/mocha": "^10.0.1",
    "@types/node": "18.x",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6",
    "@vscode/test-electron": "^2.3.4",
    "@google/generative-ai": "^0.1.0"
  }
}